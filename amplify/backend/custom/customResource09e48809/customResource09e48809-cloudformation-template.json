                "Value": "587"
              },
              {
                "Name": "EMAIL_SECURE",
                "Value": "false"
              },
              {
                "Name": "EMAIL_USER",
                "Value": "8e5c33001@smtp-brevo.com"
              },
              {
                "Name": "EMAIL_PASS",
                "Value": "ZEn4fAdTCymkXV8c"
              },
              {
                "Name": "EMAIL_FROM",
                "Value": "Teraplus <teraplusmail@gmail.com>"
              },
              {
                "Name": "S3_BUCKET_NAME_PROD",
                "Value": "elearning-storage-dev"
              },
              {
                "Name": "AWS_REGION_PROD",
                "Value": {
                  "Ref": "AWS::Region"
                }
              },
              {
                "Name": "BACKEND_API_URL",
                "Value": "https://api.qpwoeirutysport.my.id"
              }
            ]
          }
        ]
      }
    },
    "ECSService": {
      "Type": "AWS::ECS::Service",
      "Properties": {
        "ServiceName": {
          "Fn::Sub": "elearning-backend-service-${env}"
        },
        "Cluster": {
          "Fn::GetAtt": [
            "ECSCluster",
            "Arn"
          ]
        },
        "TaskDefinition": {
          "Ref": "ECSTaskDefinition"
        },
        "DesiredCount": {
          "Ref": "DesiredCount"
        },
        "LaunchType": "FARGATE",
        "NetworkConfiguration": {
          "AwsvpcConfiguration": {
            "Subnets": [
              "subnet-0b591cd259ffc3054",
              "subnet-0b97e4a398c8f0e46"
            ],
            "SecurityGroups": [
              {
                "Fn::GetAtt": [
                  "FargateServiceSecurityGroup",
                  "GroupId"
                ]
              }
            ],
            "AssignPublicIp": "ENABLED"
          }
        },
        "LoadBalancers": [
          {
            "TargetGroupArn": {
              "Ref": "ECSTargetGroup"
            },
            "ContainerName": {
              "Fn::Sub": "elearning-backend-container-${env}"
            },
            "ContainerPort": {
              "Ref": "ContainerPort"
            }
          }
        ],
        "DeploymentConfiguration": {
          "MinimumHealthyPercent": 50,
          "MaximumPercent": 200
        },
        "HealthCheckGracePeriodSeconds": 60
      },
      "DependsOn": [
        "ALBListenerHTTPS"
      ]
    },
    "APIGatewayVPCIntegration": {
      "Type": "AWS::ApiGatewayV2::Integration",
      "Properties": {
        "ApiId": {
          "Ref": "ApiGatewayId"
        },
        "IntegrationType": "HTTP_PROXY",
        "IntegrationUri": {
          "Ref": "ALBListenerHTTPS"
        },
        "IntegrationMethod": "ANY",
        "PayloadFormatVersion": "1.0",
        "ConnectionType": "VPC_LINK",
        "ConnectionId": {
          "Ref": "VPCLink"
        }
      }
    },
    "VPCLink": {
      "Type": "AWS::ApiGatewayV2::VpcLink",
      "Properties": {
        "Name": {
          "Fn::Sub": "elearning-vpclink-${env}"
        },
        "SubnetIds": [
          "subnet-0b591cd259ffc3054",
          "subnet-0b97e4a398c8f0e46"
        ],
        "SecurityGroupIds": [
          {
            "Fn::GetAtt": [
              "ALBSecurityGroup",
              "GroupId"
            ]
          }
        ]
      }
    },
    "ApiGatewayDefaultRoute": {
      "Type": "AWS::ApiGatewayV2::Route",
      "Properties": {
        "ApiId": {
          "Ref": "ApiGatewayId"
        },
        "RouteKey": "$default",
        "Target": {
          "Fn::Join": [
            "/",
            [
              "integrations",
              {
                "Ref": "APIGatewayVPCIntegration"
              }
            ]
          ]
        }
      }
    }
  },
  "Outputs": {
    "ALBDNSName": {
      "Description": "DNS Name of the Application Load Balancer",
      "Value": {
        "Fn::GetAtt": [
          "ApplicationLoadBalancer",
          "DNSName"
        ]
      }
    },
    "ECSServiceName": {
      "Description": "Name of the ECS Service",
      "Value": {
        "Fn::GetAtt": [
          "ECSService",
          "Name"
        ]
      }
    },
    "ECSClusterName": {
      "Description": "Name of the ECS Cluster",
      "Value": {
        "Ref": "ECSCluster"
      }
    }
  }
}